<Window x:Class="LandManagementApp.Views.AddSettlementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Новий населений пункт" 
        Height="200" 
        Width="300"
        WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10">
        <TextBlock Text="Назва населеного пункту:"/>
        <TextBox x:Name="NameTextBox" Margin="0 5"/>
        <Button Content="Зберегти" Click="SaveButton_Click" 
                HorizontalAlignment="Right" Width="80"/>
    </StackPanel>
</Window>
